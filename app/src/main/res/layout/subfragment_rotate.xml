                    android:id="@+id/subfragment_rotate_amount_reset"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:padding="4dp"
                    android:src="@drawable/icon_close_circle"
                    app:layout_constraintBottom_toBottomOf="@id/subfragment_rotate_amount"
                    app:layout_constraintDimensionRatio="1"
                    app:layout_constraintLeft_toRightOf="@id/subfragment_rotate_amount"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/subfragment_rotate_amount"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>


        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/subfragment_rotate_rotateright"
                android:layout_width="wrap_content"
