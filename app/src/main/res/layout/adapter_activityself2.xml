<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/activityself2_profile_head"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:civ_border_color="@color/grey200"
        app:civ_border_width="2dp"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.15"/>

    <EditText
        android:id="@+id/activityself2_text"
        style="@style/FakeTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toStartOf="@id/activity_following2_image"
        app:layout_constraintBottom_toBottomOf="@id/activityself2_profile_head"
        app:layout_constraintStart_toEndOf="@id/activityself2_profile_head"
        app:layout_constraintTop_toTopOf="@id/activityself2_profile_head"
        tools:text="edward and 13 others liked your post. 3h"/>

    <ImageView
        android:id="@+id/activityself2_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="2dp"
        app:layout_constraintWidth_percent="0.15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/activityself2_profile_head"
        app:layout_constraintBottom_toBottomOf="@id/activityself2_profile_head"
        app:layout_constraintDimensionRatio="1"
        android:layout_marginRight="16dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/icon_android"/>




</androidx.constraintlayout.widget.ConstraintLayout>