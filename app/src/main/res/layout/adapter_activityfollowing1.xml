    <LinearLayout
        android:id="@+id/activity_following1_secondimagerow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
