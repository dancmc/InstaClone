<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.AddPhotoActivity">

    <include
        android:id="@+id/subfragment_filter_toolbar"
        layout="@layout/toolbar_basic"/>

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/subfragment_filter_preview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/grey200"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintTop_toBottomOf="@id/subfragment_filter_toolbar"
        />

    <FrameLayout
        android:id="@+id/subfragment_filter_controls"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/subfragment_filter_preview"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>