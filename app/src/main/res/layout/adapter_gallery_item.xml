<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <io.replicants.instaclone.utilities.AspectImageView
        android:id="@+id/gallery_item_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:paddingBottom="4dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:scaleType="centerCrop"
        />

    <ImageButton
        android:id="@+id/gallery_item_tick"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintHeight_percent="0.2"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="@id/gallery_item_image"
        app:layout_constraintRight_toRightOf="@id/gallery_item_image"
        android:background="@drawable/selector_tick"
        android:visibility="gone"
        />

</androidx.constraintlayout.widget.ConstraintLayout>


